{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "quotes": 0,
    "semi": [2, "never"],
    "func-style": [2, "declaration", {"allowArrowFunctions": true}],
    "no-use-before-define": [2, { "functions": false }],
    "no-unused-vars" : 2,
    "no-undef" : 2,
    "prefer-const": 2
  }
}
